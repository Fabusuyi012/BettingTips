<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorButtonNormal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/friendly_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangleshape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tip_img"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="false"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:padding="5dp"
                    app:srcCompat="@drawable/tip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/tip_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tip_img"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="@string/f_title"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tip_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/f_text1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:id="@+id/tip_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/f_text2"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/friendlyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/main_footer_bet_color"
                android:text="@string/f_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangleshape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/sub_img"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="false"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:padding="5dp"
                    app:srcCompat="@drawable/sub_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/sub_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tip_img"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="@string/s_title"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sub_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/s_text1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:id="@+id/sub_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/s_text2"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:id="@+id/sub_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/s_text3"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/subButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/main_header_bet_color"
                android:text="@string/s_button" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/vip_member_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rectangleshape"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vip_img"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="false"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:padding="5dp"
                    app:srcCompat="@drawable/vip" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:background="@color/common_google_signin_btn_text_dark_default"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/vip_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tip_img"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:text="@string/v_title"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/vip_text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/v_text1"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:id="@+id/vip_text2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/v_text2"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                    <TextView
                        android:id="@+id/vip_text3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/developername"
                        android:layout_weight="1"
                        android:gravity="top"
                        android:text="@string/v_text3"
                        android:textSize="18sp"
                        android:textStyle="normal|bold|italic" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/vipButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@android:color/background_light"
                android:backgroundTint="@color/main_footer_bet_color"
                android:text="@string/v_button" />

        </LinearLayout>

    </LinearLayout>



</ScrollView>